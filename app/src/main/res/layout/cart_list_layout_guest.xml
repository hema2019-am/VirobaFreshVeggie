<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"

    android:background="@drawable/shopping_holder"
    android:id="@+id/relativeCartGuest"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    >

<ImageView
    android:id="@+id/imageCartItemGuest"
    android:layout_width="@dimen/_60sdp"
    android:layout_height="@dimen/_80sdp"
    android:src="@drawable/ic_cart_blue"
    android:background="@null"
    android:layout_marginLeft="@dimen/_5sdp"
    />

    <TextView
        android:id="@+id/txt_itemCartNameGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_toRightOf="@id/imageCartItemGuest"
        android:layout_marginLeft="@dimen/_2sdp"
        android:text="Item Name"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/categoriesColor"/>

    <TextView
        android:id="@+id/txt_itemCartNameInMarathiGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemCartNameGuest"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_toRightOf="@id/imageCartItemGuest"
        android:text="Marathi Name"
        android:textColor="@color/categoriesColor"
        android:textSize="@dimen/_14ssp" />



    <TextView
        android:id="@+id/txtQuantityCartGuestKgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/cartQuantity"
       android:layout_toRightOf="@id/txt_itemCartNameGuest"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/txt_cart_unitGuestKgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kgs"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/cartQuantity"
        android:layout_marginTop="@dimen/_20sdp"
       android:layout_toRightOf="@id/txtQuantityCartGuestKgs"
         />

    <TextView
        android:id="@+id/txtQuantityCartGuestGms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/cartQuantity"
        android:layout_toRightOf="@id/txt_cart_unitGuestKgs"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/txt_cart_unitGuestGms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gms"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/cartQuantity"
        android:layout_marginTop="@dimen/_20sdp"

        android:layout_toRightOf="@id/txtQuantityCartGuestGms"

        />

    <TextView
        android:id="@+id/txt_cart_priceGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="itemPrice"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/cartQuantity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@id/txt_cart_unitGuestGms"/>

    <RelativeLayout
        android:id="@+id/btn_cart_deleteGuest"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/cart_item_delete"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"

        >
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_delete_white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_cart_edit_Guest"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="#A6BCD0"
        android:layout_toLeftOf="@id/btn_cart_deleteGuest"
        android:visibility="invisible"
        >

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_edit_white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>





</RelativeLayout>