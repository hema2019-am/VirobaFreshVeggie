<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserScreens.RegisterActivity">

    <RelativeLayout
        android:id="@+id/InnerRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_register_border">

        <ImageButton
            android:id="@+id/btn_register_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@android:color/white"
            android:src="@drawable/ic_close_gray" />

        <TextView
            android:id="@+id/txt_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_register_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/acumin_rpro"
            android:text="Create Account"
            android:textColor="@color/textColorGreen"
            android:textSize="@dimen/_24ssp" />


        <EditText
            android:id="@+id/edt_register_FullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_120sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_rect01"
            android:drawableStart="@drawable/ic_person_blue"
            android:drawableLeft="@drawable/ic_person_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/acumin_rpro"
            android:hint="Full Name"
            android:inputType="text"
            android:padding="@dimen/_10sdp"
            android:textColorHint="@color/textColorHint" />

        <EditText
            android:id="@+id/edt_register_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_register_FullName"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_rect01"
            android:drawableStart="@drawable/ic_phone_gray"
            android:drawableLeft="@drawable/ic_phone_gray"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/acumin_rpro"
            android:hint="phone"
            android:inputType="phone"
            android:padding="@dimen/_10sdp"
            android:textColorHint="@color/textColorHint" />

        <EditText
            android:id="@+id/edt_hotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_register_Phone"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_rect01"
            android:drawableStart="@drawable/ic_store_blue"
            android:drawableLeft="@drawable/ic_store_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/acumin_rpro"
            android:hint="Hotel Name (optional)"
            android:inputType="text"
            android:padding="@dimen/_10sdp"
            android:textColorHint="@color/textColorHint" />




        <EditText
            android:id="@+id/edt_register_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_hotelName"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_rect01"
            android:drawableStart="@drawable/ic_password_blue"
            android:drawableLeft="@drawable/ic_password_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/acumin_rpro"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            android:textColorHint="@color/textColorHint" />

        <EditText
            android:id="@+id/edt_register_ConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_register_Password"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_rect01"
            android:drawableStart="@drawable/ic_password_blue"
            android:drawableLeft="@drawable/ic_password_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/acumin_rpro"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            android:textColorHint="@color/textColorHint" />




        <RelativeLayout
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cart_item_explore"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_below="@id/edt_register_ConfirmPassword"
            android:layout_marginBottom="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"

            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/textColorGreen"
                android:src="@drawable/ic_next_white"
                android:layout_marginLeft="@dimen/_50sdp"
                />

            <TextView
                android:id="@+id/txtProceed"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:fontFamily="@font/acumin_rpro"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"/>

        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_signIn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/InnerRL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/acumin_rpro"
        android:text="SIGN IN"
        android:textColor="@color/textColorHint"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

</RelativeLayout>