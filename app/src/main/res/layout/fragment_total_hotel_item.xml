<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminScreen.TotalHotelItem">


    <ImageButton
        android:id="@+id/btn_back_total_item"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@android:color/white"
        android:src="@drawable/ic_close_gray"
        android:layout_alignParentRight="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shopping_holder"
       android:layout_margin="@dimen/_20sdp"
        android:layout_below="@id/btn_back_total_item">

        <TextView
            android:id="@+id/txt_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Total Items"
            android:textColor="@color/textColorHint"
            android:textSize="@dimen/_15ssp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle__total_HotelItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@id/txt_items"


            />

    </RelativeLayout>



</RelativeLayout>