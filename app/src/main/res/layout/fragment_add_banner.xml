<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AdminScreen.AddBannerFragment">

    <ImageButton
        android:id="@+id/btn_banner_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_10sdp"
        android:background="@android:color/white"
        android:src="@drawable/ic_close_gray" />

    <TextView
        android:id="@+id/txt_addItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/acumin_rpro"
        android:text="Add Banner"
        android:textColor="#748A9D"
        android:textSize="@dimen/_18ssp" />


<LinearLayout
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_150sdp"
    android:background="@drawable/shopping_holder"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/_20sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_current_banner"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_store_blue"
        />

    <TextView
        android:id="@+id/text_remove_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Remove"
        android:textColor="#DD4040"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10sdp"/>

</LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/hotel_list_name_border"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_addIt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:fontFamily="@font/acumin_rpro"
            android:text="Add Banner"
            android:textColor="#748A9D"
            android:textSize="@dimen/_18ssp"
            android:layout_marginTop="@dimen/_20sdp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_add_banner"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/txt_addIt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_store_blue"
            app:civ_border_color="#2B2B2B"
            app:civ_border_width="1dp"


            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_pencil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@id/img_add_banner"
            android:layout_alignRight="@id/img_add_banner"
            android:layout_marginTop="@dimen/_130sdp"
            android:layout_marginRight="@dimen/_minus8sdp"
            android:background="@android:color/white"
            android:src="@drawable/ic_edit_black"
            app:civ_border_color="#2B2B2B"
            app:civ_border_width="@dimen/_1sdp"


            />


        <RelativeLayout
            android:id="@+id/btn_add_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cart_item_explore"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_below="@id/img_add_banner"
            android:layout_marginTop="@dimen/_20sdp"

            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/textColorGreen"
                android:src="@drawable/ic_next_white"
                android:layout_marginLeft="@dimen/_50sdp"
                />

            <TextView
                android:id="@+id/txtProceed"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="Add Banner"
                android:fontFamily="@font/acumin_rpro"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </RelativeLayout>






    </RelativeLayout>




</LinearLayout>