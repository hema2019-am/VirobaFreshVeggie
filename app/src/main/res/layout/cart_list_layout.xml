<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/shopping_holder">

    <ImageView
        android:id="@+id/imageCartItem"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="@null"
        android:src="@drawable/ic_cart_blue"
        android:layout_marginLeft="@dimen/_5sdp"

        />

    <TextView
        android:id="@+id/txt_itemCartName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_toRightOf="@id/imageCartItem"
        android:text="Item Name"
        android:textColor="@color/categoriesColor"
        android:textSize="@dimen/_14ssp" />


    <TextView
        android:id="@+id/txt_itemCartNameInMarathi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemCartName"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_toRightOf="@id/imageCartItem"
        android:text="Marathi Name"
        android:textColor="@color/categoriesColor"
        android:textSize="@dimen/_14ssp" />


    <TextView
        android:id="@+id/txtQuantityCartKgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_toRightOf="@id/txt_itemCartName"

        android:text="500"
        android:textColor="@color/cartQuantity"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/txt_cart_unitKgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_toRightOf="@id/txtQuantityCartKgs"
        android:text="kg"
        android:textColor="@color/cartQuantity"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/txtQuantityCartGms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_toRightOf="@id/txt_cart_unitKgs"

        android:text="750"
        android:textColor="@color/cartQuantity"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/txt_cart_unitGms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_toRightOf="@id/txtQuantityCartGms"
        android:text="gm"
        android:textColor="@color/cartQuantity"
        android:textSize="@dimen/_14ssp" />

    <RelativeLayout
        android:id="@+id/btn_cart_delete"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/cart_item_delete"
        android:visibility="invisible"

        >

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_delete_white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_cart_edit"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_toLeftOf="@id/btn_cart_delete"
        android:background="#A6BCD0"
        android:visibility="invisible">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_edit_white" />

    </RelativeLayout>


</RelativeLayout>