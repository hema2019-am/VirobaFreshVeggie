<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserScreens.Login"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/InnerRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_register_border">

       <ImageView
           android:id="@+id/image_admin"
           android:layout_width="@dimen/_40sdp"
           android:layout_height="@dimen/_50sdp"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:src="@drawable/ic_admin_blue"
           android:background="@drawable/ic_next_white"
           android:layout_marginRight="@dimen/_17sdp"
           android:layout_marginTop="@dimen/_15sdp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acumin_rpro"
            android:textSize="@dimen/_17ssp"
            android:textColor="@color/textColorHint"
            android:text="Admin"
            android:layout_below="@id/image_admin"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp" />



        <TextView
            android:id="@+id/txt_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:fontFamily="@font/acumin_rpro"
            android:textSize="@dimen/_24ssp"
            android:textColor="@color/textColorGreen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40sdp"/>


        <EditText
            android:id="@+id/edt_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect01"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_140sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:drawableLeft="@drawable/ic_phone_gray"
            android:drawableStart="@drawable/ic_phone_gray"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Phone no"
            android:fontFamily="@font/acumin_rpro"
            android:textColorHint="@color/textColorHint"
            android:inputType="phone"
            />

        <EditText
            android:id="@+id/edt_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect01"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:drawableLeft="@drawable/ic_password_blue"
            android:drawableStart="@drawable/ic_password_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Password"
            android:fontFamily="@font/acumin_rpro"
            android:textColorHint="@color/textColorHint"
            android:inputType="textPassword"
            android:layout_below="@id/edt_login_email"
            />

        <TextView
            android:id="@+id/txt_forgetPasswordLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/textColorHint"
            android:layout_below="@id/edt_login_password"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/acumin_rpro"
            />





        <RelativeLayout
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cart_item_explore"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_below="@id/txt_forgetPasswordLogin"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_110sdp"

            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/textColorGreen"
                android:src="@drawable/ic_next_white"
                android:layout_marginLeft="@dimen/_50sdp"
                />

            <TextView
                android:id="@+id/txtProceed"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:fontFamily="@font/acumin_rpro"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                />

        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_createAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/InnerRL"
        android:layout_centerHorizontal="true"
        android:text="CREATE ACCOUNT"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/textColorHint"
        android:textStyle="bold"
        android:fontFamily="@font/acumin_rpro"/>







</RelativeLayout>