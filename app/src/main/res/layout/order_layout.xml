<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/shopping_holder"
    android:layout_marginBottom="@dimen/_10sdp"
    android:id="@+id/rl_oredrId">

    <TextView
        android:id="@+id/txt_orderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: "
        android:textSize="@dimen/_17ssp"
        android:textColor="#A6BCD0"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/txt_orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ON: "
        android:textSize="@dimen/_17ssp"
        android:textColor="#A6BCD0"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_below="@id/txt_orderNumber"
        android:layout_marginBottom="@dimen/_20sdp"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_blue"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_60sdp"
        />

</RelativeLayout>