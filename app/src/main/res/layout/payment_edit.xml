<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/hotel_list_name_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Total Balance"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/textColorHint"
        android:fontFamily="@font/acumin_rpro"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shopping_holder"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_5sdp"

        >

        <EditText
            android:id="@+id/edt_payment"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/shopping_holder"
            android:hint="00"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="@color/textColorHint"
            android:imeOptions="actionDone"
           />

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/shopping_holder"
            android:src="@drawable/ic_cancel_blue"
            android:layout_toRightOf="@id/edt_payment"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />




    </RelativeLayout>



</LinearLayout>